<script>
  let datos;
  let limite = 10;
  let btnMore = true;
  let btnLess = false;
  let loading = true;
  function onMount() {
    getData();
  }
  const getData = async () => {
    loading = true;
    try {
      const resp = await fetch(
        `https://api.coincap.io/v2/assets?limit=${limite}`
      );
      const data = await resp.json();
      //   console.log(data.data);
      datos = data.data;
      console.log(datos.length);
      loading = false;
    } catch (error) {
      console.log(error);
    }
  };

  const mostrarMas = () => {
    if (datos.length <= 90) {
      limite = limite + 10;
      getData();
    }
  };
  const mostrarMenos = () => {
    if (datos.length > 10) {
      limite = limite - 10;
      getData();
    }
  };
</script>


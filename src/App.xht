<div class="container table-style mb-4">
  <div class="row header-style">
    <div class="col">
      <span><b>Rank</b></span>
    </div>
    <div class="col">
      <span><b>Name</b></span>
    </div>
  </div>
  {#each datos as dato}
  <div class="row fila-style">
    <div class="col">
      <span>{dato.rank}</span>
    </div>
    <div class="col">
      <span>{dato.name}</span>
    </div>
  </div>
  {/each}
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col text-end">
      {#if limite >90 || loading}
      <button class="btn btn-info btn-exchange disabled" @click="{mostrarMas}">
        View more
      </button>
      {:else}
      <button class="btn btn-info btn-exchange" @click="{mostrarMas}">
        View more
      </button>
      {/if}
    </div>
    <div class="col text-start">
      {#if limite<=10 || loading}
      <button
        class="btn btn-info btn-exchange disabled"
        @click="{mostrarMenos}"
      >
        View more
      </button>
      {:else}

      <button class="btn btn-info btn-exchange" @click="{mostrarMenos}">
        View more
      </button>
      {/if}
    </div>
  </div>
</div>

